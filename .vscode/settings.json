{
  "prettier.enable": false,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.tabSize": 2,
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.hg/**",
    "**/.svn/**",
    "**/.nuxt/**"
  ],
  "cSpell.words": [
    "cloudinary",
    "Namecheap",
    "Nuxt",
    "spacegrotesk",
    "Tailwindcss",
    "vuex"
  ]
}
